{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "Node16",
    "target": "ES2015",
    "lib": ["ES2015"],
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "verbatimModuleSyntax": true
